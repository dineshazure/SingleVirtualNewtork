{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "location": {
        "type": "string",
        "defaultValue": "[resourceGroup().location]",
        "metadata": {
          "description": "Location for all resources."
        }
      },
      "customername": {
        "type": "string",
        "metadata": {
            "description": "Please provide valid address space for the virtual network"
        }
      },
      "vnetAddressPrefix": {
        "type": "string",
        "metadata": {
            "description": "Please provide valid address space for the virtual network"
      },
      "ddosProtectionPlanEnabled": {
        "type": "bool",
        "defaultValue": false,
        "metadata": {
          "description": "DDos Protection."
        }
      },
      "ipv6Enabled": {
        "type": "bool",
        "defaultValue": false,
        "metadata": {
          "description": "IPv6 should be true or false"
        }
      },
      "firewallEnabled": {
        "type": "bool",
        "defaultValue": false,
        "metadata": {
          "description": "Firewall Enable."
        }
      },
      "bastionEnabled": {
        "type": "bool",
        "defaultValue": false,
        "metadata": {
          "description": "Bastion Enable."
        }
      }
    }
},
    "variables": {
        "virtualNetworkName": "[concat(parameter('customername'), '-UKS-SHS_VNET')]"
    },
    "resources": [
      {
        "name": "[variables('virtualNetworkName')]",
        "type": "Microsoft.Network/virtualNetworks",
        "apiVersion": "2019-09-01",
        "location": "[parameters('location')]",
        "dependsOn": [],
        "properties": {
          "addressSpace": {
            "addressPrefixes": [
              "[parameters('vnetAddressPrefix')]"
            ]
          }
        }
      }
    ]
  }